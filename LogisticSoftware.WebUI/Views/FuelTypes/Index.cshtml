</header>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FuelName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FuelName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.FuelTypeId }) |
