@model IEnumerable<LogisticSoftware.WebUI.Models.Entities.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header class="content_header">
    <h2>Користувачі</h2>

    <p>
        @Html.ActionLink("Додати нового коритсувача", "Create")
    </p>
</header>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Login)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Login)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Редагувати", "Edit", new { id=item.UserId }) |
            @Html.ActionLink("Видалити", "Delete", new { id=item.UserId })
        </td>
    </tr>
}

</table>
