@model IEnumerable<LogisticSoftware.WebUI.Models.Entities.Vehicle>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header>
    <h2>Транспортні засоби</h2>

    <p>
        @Html.ActionLink("Додати транспортний засіб", "Create")
    </p>
</header>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Driver.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VehicleId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegistrationNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModelName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastInspection)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WeightCapacity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrunkSize)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Driver.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VehicleId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegistrationNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModelName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastInspection)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WeightCapacity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TrunkSize)
        </td>
        <td>
            @Html.ActionLink("Редагувати", "Edit", new { id=item.DriverId }) |
            @Html.ActionLink("Деталі", "Details", new { id=item.DriverId }) |
            @Html.ActionLink("Видалити", "Delete", new { id=item.DriverId })
        </td>
    </tr>
}

</table>
